{
  "manifest_version": 3,
  "name": "Outfit Planner",
  "version": "1.0",
  "description": "Plan your outfit with ease.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
      "*"
  ]
}

